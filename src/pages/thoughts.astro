---
import MainLayout from "../layouts/MainLayout.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<MainLayout>

  <ul class="md:m-12 m-7 space-y-4 md:space-y-6">
		{allPosts.map((post) => 
			<li class="p-4 shadow-md rounded-lg grid grid-row-3 space-y-2">
			<a class="text-lg text-black font-medium" href={post.url}>{post.frontmatter.title}</a> 
			<a class="text-black" href={post.url}>{post.frontmatter.description}</a>
			<a class="place-self-end text-gray-700 hover:text-gray-700/80 tracking-wide hover:underline underline-offset-4 pt-4" href={post.url}>Click Here -></a>
			</li> )}
  </ul>
 
</MainLayout>