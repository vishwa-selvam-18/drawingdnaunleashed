<MainLayout>
 <!-- Hero section for the ART page -->
 <section class="channel-card-wrapper container md:items-center justify-items-center p-6 md:p-12  gap-8 flex items-center md:flex-row flex-col md:px-32 my-4">
    <div class="content md:place-self-center place-self-start md:w-1/2 text-black md:p-4,space-y-6 space-y-4">
        <p class=" text-xl font-medium">Drawing DNA Unleashed</p>
